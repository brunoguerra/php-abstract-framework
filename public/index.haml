/
  Carousel
  \==================================================

#home_gallery.carousel.slide
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
    %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
    %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
  .carousel-inner
    .item.active
      %img{:alt => "First slide", "src" => "#{image_url('slide_1_big.jpg')}"}/
      .green.description
        %h2
          %a{:href => "social.php"}
            Assistência às Crianças
            %br>/
            e Família        
          
        %p
          equipes multiprofissionais capacitadas para prestar assistência às necessidades globais do crescimento e desenvolvimento da criança
  %a.left.carousel-control{"data-slide" => "prev", :href => "#gallery"}
    %span.icon-prev
  %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic"}
    %span.icon-next
/ .carousel
